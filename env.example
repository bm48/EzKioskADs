# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe Configuration (Optional - for payment processing)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Application Configuration
VITE_APP_NAME=Ad Management Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# File Upload Limits (in bytes)
VITE_MAX_IMAGE_SIZE=10485760  # 10MB
VITE_MAX_VIDEO_SIZE=524288000 # 500MB
VITE_MAX_VIDEO_DURATION=15    # 15 seconds

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_TRACKING_ID=your-analytics-id

# Feature Flags
VITE_ENABLE_STRIPE_PAYMENTS=true
VITE_ENABLE_CREATIVE_MARKETPLACE=true
VITE_ENABLE_COUPON_CODES=true
VITE_ENABLE_REAL_TIME_ANALYTICS=true

